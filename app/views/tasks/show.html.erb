<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>
<br>

<% if @task.completed? %>
  <div>
    <i class="far fa-check-square"></i>
    <span>This task is completed</span>
  </div>
  <% else %>
  <div>
    <i class="far fa-square"></i>
    <span>This task is not completed yet!</span>
  </div>
  <% end %>
<%= link_to "Edit task", edit_task_path %>
<%= link_to "Back to list", tasks_path %>

